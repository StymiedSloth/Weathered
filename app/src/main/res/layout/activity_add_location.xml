<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="crash.weathered.AddLocation">

    <RelativeLayout
        android:id="@+id/addlocationrellayout"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@color/bkg_card"
        >

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_close"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:background="@drawable/ripple_mask"/>


        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp">
                <EditText
                    android:id="@+id/addnewlocation"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@+id/add_btn"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:hint="@string/locationhint"
                    android:textColorHint="@android:color/white"
                    >
                    </EditText>
                <ImageView
                    android:id="@+id/add_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_accept"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:background="@drawable/ripple_mask"
                    />
        </RelativeLayout>

    </RelativeLayout>

    <GridLayout
        android:layout_below="@+id/addlocationrellayout"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_column="0"

            >
        <ImageView
            android:id="@+id/london_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/london"
            android:onClick="location_click"
            android:clickable="true"
            android:background="@drawable/ripple_mask"/>
        <TextView
            android:text="London"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_column="1"
            >
            <ImageView
                android:id="@+id/san_fran_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/san_francisco"
                android:onClick="location_click"
                android:clickable="true"
                android:background="@drawable/ripple_mask"/>
            <TextView
                android:text="San Francisco"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_column="2"
            >
            <ImageView
                android:id="@+id/tokyo_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/tokyo"
                android:onClick="location_click"
                android:clickable="true"
                android:background="@drawable/ripple_mask"/>
            <TextView
                android:text="Tokyo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="1"
            >
            <ImageView
                android:id="@+id/nyc_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/new_york"
                android:onClick="location_click"
                android:clickable="true"
                android:background="@drawable/ripple_mask"/>
            <TextView
                android:text="New York"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="1"
            >
            <ImageView
                android:id="@+id/paris_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/paris"
                android:onClick="location_click"
                android:clickable="true"
                android:background="@drawable/ripple_mask"/>
            <TextView
                android:text="Paris"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="1"
            >
            <ImageView
                android:id="@+id/sydney_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sydney"
                android:onClick="location_click"
                android:clickable="true"
                android:background="@drawable/ripple_mask"/>
            <TextView
                android:text="Sydney"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        </GridLayout>
</RelativeLayout>
